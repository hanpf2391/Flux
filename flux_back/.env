# Spring Boot configuration
SPRING_PROFILES_ACTIVE=dev

# Database configuration (for development)
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/flux?useUnicode=true&characterEncoding=utf8&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=123456

# Redis configuration (for development - disable if Redis is not available)
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
# Set to empty if no password
SPRING_DATA_REDIS_PASSWORD=

# Server configuration
SERVER_PORT=8080

# Application configuration
FLUX_RATE_LIMIT_DURATION_MS=100

# CORS configuration (for development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# Health check management
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=never